# EditorConfig helps maintain consistent coding styles
# across different editors and IDEs
# https://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,html,css,json}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false